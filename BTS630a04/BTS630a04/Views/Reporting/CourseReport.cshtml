@model IEnumerable<BTS630a04.Models.Teaching>

@{
    ViewBag.Title = "Course Report";
}

<h2>Course Report</h2>


<table class="filterable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Professor.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Section)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Professor.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Section)
        </td>
    </tr>
}

</table>
@section Scripts {
     
    @Scripts.Render("~/assets/js/filterTable.js")

}