@model BTS630a04.Models.LogOnModel

@{
    ViewBag.Title = "Welcome To The Seneca Staffing Application";
    bool isLoggedIn = System.Web.HttpContext.Current.User.Identity.IsAuthenticated;
}

@if (!isLoggedIn)
{
    using (Html.BeginForm())
    {
    @Html.ValidationSummary(true)
 
    <span class="usecase">UC 07</span>

    <h2>Home</h2>

    <fieldset>
        <legend>Login</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Password)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <p>
            <br />
            <input type="submit" value="Login" />
        </p>
    </fieldset>
    
    }

    using (Html.BeginForm("Register", "Account"))
    {		
    <fieldset>
        <legend>Register</legend>
        <p>If you do not already have an account, please create a new account to register.</p>
        <br />
        <input type="submit" value="Register" />
    </fieldset>
    }

}
else{
    
        <h1 style="text-align:center;padding-top:3em">Welcome to the Seneca Staffing Application!</h1>
    
}