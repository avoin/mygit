@model BTS630a04.Models.Professorcredentials

@{
    ViewBag.Title = "Edit A Professor Credential";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Professorcredentials</legend>

        @Html.HiddenFor(model => model.ProfessorCredentialsID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ProfessorID, "Professor")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ProfessorID", String.Empty)
            @Html.ValidationMessageFor(model => model.ProfessorID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CredentialsID, "Credentials")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CredentialsID", String.Empty)
            @Html.ValidationMessageFor(model => model.CredentialsID)
        </div>

        <p>
            <br /><input  type="submit" value="Save"  />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


