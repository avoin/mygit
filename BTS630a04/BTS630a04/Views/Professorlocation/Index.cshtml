@model IEnumerable<BTS630a04.Models.Professorlocation>

@{
    ViewBag.Title = "View All Associations Between A Professor And A Location";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Full Name    
        </th>
        <th>
           @Html.DisplayNameFor(model => model.Location.Name) 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Professor.FirstName)&nbsp;@Html.DisplayFor(modelItem => item.Professor.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProfessorlocationID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProfessorlocationID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProfessorlocationID })
        </td>
    </tr>
}

</table>
